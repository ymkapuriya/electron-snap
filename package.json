{
  "name": "electron-snap",
  "version": "1.0.0",
  "description": "An Electron Snap",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build",
    "dist": "electron-builder --linux snap"
  },
  "repository": "https://github.com/ymkapuriya/electron-snap",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "snap"
  ],
  "author": "Yogesh Kapuriya",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "wireless-tools": "https://github.com/ymkapuriya/wireless-tools"
  },
  "build": {
    "appId": "com.example.app",
    "productName": "ws-snap",
    "linux": {
      "target": "snap"
    },
    "snap": {
      "plugs": [
        "desktop",
        "desktop-legacy",
        "home",
        "wayland",
        "unity7",
        "browser-support",
        "network",
        "gsettings",
        "audio-playback",
        "pulseaudio",
        "opengl"
      ]
    }
  }
}
